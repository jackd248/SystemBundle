{% extends 'bundles/SonataAdminBundle/standard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/systeminformation/css/base.css') }}">
{% endblock %}

{% block sonata_page_content_header %}
    <div class="page-header">
        <h2>System overview</h2>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        {% for info in information %}
            <div class="col-md-6 col-lg-4 col-xl-2">
                <div class="system-box">
                    <div>
                        <i class="{{ info.icon }}"></i>
                    </div>
                    <div>
                        <h4><strong>{{ info.value }}</strong></h4>
                        <h5 class="mb-2 text-muted">{{ info.description }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row">
    <div class="col-md-12 col-xl-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="icon-monitor mr-5" aria-hidden="true"></i> Monitor
                </h3>
            </div>
            <div class="panel-body">
                <p>
                    This service performs user defined health checks for the various services that compose an
                    application.
                </p>
                <p>
                    See <a href="https://github.com/liip/LiipMonitorBundle">LiipMonitorBundle</a> for further check
                    configuration.
                </p>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">Check</th>
                        <th scope="col">Description</th>
                    </tr>
                    </thead>
                    {% for check in checks %}
                        {% if check.status == 0 %}
                            {% set context = 'success' %}
                        {% elseif check.status == 1 %}
                            {% set context = 'warning' %}
                        {% elseif check.status == 2 %}
                            {% set context = 'danger' %}
                        {% elseif check.status == 3 %}
                            {% set context = 'danger' %}
                        {% else %}
                            {% set context = 'light' %}
                        {% endif %}
                        <tr class="table-{{ context }}">
                            <th>{{ check.checkName }}</th>
                            <td>{{ check.message }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-xl-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="icon-info mr-5" aria-hidden="true"></i> Log overview
                </h3>
            </div>
            <div class="panel-body">
                <p>
                    The log viewer based on the <a
                            href="https://github.com/evotodi/log-viewer-bundle">log-viewer-bundle</a> for viewing
                    application logs.
                </p>
                <table class="table table-condensed">
                    {% for log in logs %}
                        <tr>
                            <td>
                                <a href="{{ path('kmi_system_information_log_view', {'id':log.id}) }}">{{ log.name }}</a>
                            </td>
                            <td>
                                <span class="badge badge-pill badge-info">{{ log.size }}</span>
                            </td>
                            <td>
                                <span class="label label-default">{{ log.mtime|format_datetime() }}</span>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-xl-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="icon-layers mr-5" aria-hidden="true"></i> Information
                </h3>
            </div>
            <div class="panel-body">
                <table class="table table-condensed">
                    {% for key, info in infos %}
                        <tr>
                            <td><strong>{{ key }}</strong></td>
                            <td>{{ info }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}