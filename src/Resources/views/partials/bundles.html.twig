<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <i class="icon-list mr-5"
               aria-hidden="true"></i> {{ 'dashboard.bundles.heading'|trans({}, 'SystemInformationBundle') }}
        </h3>
    </div>
    <div class="panel-body">
        {{ 'dashboard.bundles.description'|trans({'bundlesCount': bundles|length}, 'SystemInformationBundle')|raw }}
        <table class="table table-condensed">
            {% for key, value in bundles %}
                <tr>
                    <td>{{ key }}</td>
                    <td style="font-family: monospace, monospace;">{{ value }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>