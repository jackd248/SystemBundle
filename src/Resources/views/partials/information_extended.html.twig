<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <i class="icon-layers mr-5"
               aria-hidden="true"></i> {{ 'dashboard.information.heading'|trans({}, 'SystemInformationBundle') }}
        </h3>
    </div>
    <div class="panel-body">
        {{ 'dashboard.information.description'|trans({'phpInfoPath': path('kmi_system_information_phpinfo')}, 'SystemInformationBundle')|raw }}
        <table class="table table-condensed">
            {% for key, values in infos %}
                <tr>
                    <td colspan="2"><strong>{{ key }}</strong></td>
                </tr>
                {% for item in values %}
                    <tr>
                        <td>{{ item.label }}</td>
                        <td style="font-family: monospace, monospace;">{{ item.value }}</td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </table>
    </div>
</div>